---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import BannerHome from '../components/BannerHome.astro';
---

<Layout title="Bienvenido a Medipoint">
	<main class="w-full">
		<header>
			<Navbar />
			<BannerHome />
		</header>
		<section class="characteristics"></section>
		<section class="location"></section>
		<section class="carousel-eps"></section>
		<section class="news"></section>
		<footer></footer>
	</main>
</Layout>


<style>
	@tailwind base;
	@tailwind components;
	@tailwind utilities;

	main {
		@apply w-full;
	}
</style>
